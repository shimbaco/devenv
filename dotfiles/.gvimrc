" タブを常に非表示
set showtabline=0

" IMを無効化
set imdisable

" 透明度を指定
" set transparency=3

" アンチエイリアス
set antialias

" フォント
"set guifont=Menlo\ Regular:h10
"set guifont=ゆたぽん（コーディング）:h12
"set guifont=Bitstream\ Vera\ Sans\ Mono:h8
set guifont=Ubuntu\ Mono:h14

" カラースキーマ
"colorscheme sorcerer
"colorscheme zenburn
"colorscheme molokai
"colorscheme mayansmoke
colorscheme solarized
"colorscheme lucius
"LuciusDarkLowContrast

" Solarizedカラースキームの背景色
set background=light

" 画面上の列幅を設定する
set columns=155

" 画面上の行数
set lines=104

" ツールバーを非表示
set guioptions-=T
